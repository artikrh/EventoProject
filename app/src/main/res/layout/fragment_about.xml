<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundcolor"
    tools:context=".AboutFragment">

    <RelativeLayout
        android:id="@+id/aboutContent"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="match_parent"
        android:background="?attr/backgroundcolor">

        <TextView
            android:id="@+id/copyright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="?attr/textcolor"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:text="Copyright [2018] [Evento]"
            />

        <TextView
            android:layout_below="@+id/copyright"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="?attr/textcolor"
            android:textAlignment="center"
            android:textSize="22dp"
            android:text="Licensed under the Apache License, Version 2.0 (the License). Unless required by applicable law or agreed to in writing, software distributed under the License is distributed on an AS IS BASIS, WITHOUT WARRANTIES OR CONDITIONS OF ANY KIND, either express or implied. See the License for the specific language governing permissions and limitations under the License."
            />


    </RelativeLayout>



</FrameLayout>